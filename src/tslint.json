{
  "extends": "../tslint.json",
  "rules": {
    "indent": [true, "tabs", 2],
    "quotemark": [true, "single"],
    "ter-indent": [true, 2],
    "directive-selector": [
      true,
      "attribute",
      "app",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "app",
      "kebab-case"
    ]
  }
}
